<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:descendantFocusability="blocksDescendants"


        >

    <ru.kurganec.vk.messenger.newui.MessageBubbleContainer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_message_income"
            android:paddingLeft="14dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_gravity="left"
            >


        <TextView

                android:id="@+id/label_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="16sp"
                android:autoLink="web|email|phone"


                android:gravity="left"
                android:layout_gravity="left"
                android:text="body"

                />
        <!--inverse paddings in out xml-->
        <LinearLayout
                android:layout_below="@id/label_body"
                android:id="@+id/list_attach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="left"/>


        <TextView
                android:id="@+id/label_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/divider"
                android:text="time"
                />

    </ru.kurganec.vk.messenger.newui.MessageBubbleContainer>


</FrameLayout>